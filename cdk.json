{
  "app": "npx ts-node --prefer-ts-exts bin/main.ts",
  "watch": {
    "include": ["**"],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "context": {
    "siteContentSourcePath": "<path to dir>",
    "getTriviaLambdaEntryPoint": "<path to handler.js>",
    "dkimValue": "<dkim value>"
  }
}
